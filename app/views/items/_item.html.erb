<table style="background-color:black;width:100%;height: 20px;">
  <colgroup>
    <col style="background-color:rgb(245, 242, 242);width:50%">
    <col style="background-color:rgb(221, 221, 221);width:50%">
  </colgroup>
  <tr>
    <td style="vertical-align:top;">      
      <div id="<%= dom_id item %>">
        <% if item.translation? %>
          <p>
            Translation of <%= link_to "Item #{item.item_id}", item_path(item.item_id) %> into <strong><%= "#{item.language.name}" %></strong>
          </p>
        <% end %>
        <p>
          <strong>Status:</strong>
          <%= item.status %>
        </p>
        <p>
          <strong>Title:</strong>
          <%= item.title %>
        </p>
        <p>
          <strong>Description:</strong>
          <%= item.description %>
        </p>
      </div>
      <% if item.events.present? %>
        <h4>
          Registered works on this item:
        </h4>
        <div>
          <% item.events.order(id: :desc).each do |e| %>
            <p>
              <%= phrase_that(e) %> <strong><%= time_tag e.created_at, "data-local": "time-ago" %></strong>
            </p>
          <% end %>
      </div>
      <% end %>
    </td>  
    <td style="vertical-align:top;">
      <p>
        <%= simple_format(item.content) %>
      </p>
    </td>  
  </tr>  
</table>